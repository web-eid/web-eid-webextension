{
  "manifest_version": 3,
  "default_locale": "en",
  "name": "Web eID",
  "description": "Use your electronic identification card for secure authentication and digital signing.",
  "version": "{{package.version}}",
  "icons": {
    "128": "web-eid-icon-128.png"
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "*://*/*"
      ],
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_icon": "icons/web-eid-icon-128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "nativeMessaging",
    "tabs"
  ],
  "host_permissions": [
    "*://*/*"
  ]
}
