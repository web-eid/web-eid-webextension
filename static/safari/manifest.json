{
  "manifest_version": 2,
  "name": "Web eID",
  "description": "Use your electronic identification card for secure authentication and digital signing.",
  "version": "{{package.version}}",
  "icons": {
    "128": "web-eid-icon-128.png"
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "*://*/*"
      ],
      "all_frames": true
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_ui": {
    "page": "views/options.html"
  },
  "devtools_page": "views/devtools/devtools.html",
  "permissions": [
    "*://*/*",
    "nativeMessaging"
  ],
  "optional_permissions": [
    "devtools",
    "storage"
  ]
}
