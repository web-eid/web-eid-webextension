{
  "compilerOptions": {
    "module": "es6",
    "target": "es2019",
    "noImplicitAny": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "baseUrl": ".",
    "esModuleInterop": true,
    "paths": {
      "@web-eid.js/*": [
        "./lib/web-eid.js/src/*"
      ]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
